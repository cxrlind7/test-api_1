@page
@model IEnumerable<paginas.Models.PersonaClass>
@{
    ViewData["Title"] = "Home page";

}

<h2>
    Personas
</h2>

<h2>All Reservations</h2>
<a asp-action="AddReservation" class="btn btn-sm btn-primary">Add Reservation</a>
<a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Reservation</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start Location</th>
            <th>End Location</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.idPersonaFisica</td>
                <td>@r.Nombre</td>
                <td>@r.Nombre</td>
                <td>@r.RFC</td>
                <td>
                    <a asp-action="UpdateReservation" asp-route-id="@r.idPersonaFisica">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteReservation" method="post">
                        <input type="hidden" value="@r.idPersonaFisica" name="ReservationId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>